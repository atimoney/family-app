// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model CalendarAccount {
  id               String   @id @default(cuid())
  userId           String
  provider         String
  googleCalendarId String
  tokens           Json
  syncState        Json
  deletedAt        DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  events CalendarEvent[]

  @@unique([userId, provider])
  @@index([userId])
}

model CalendarEvent {
  id            String   @id @default(cuid())
  userId        String
  accountId     String
  googleEventId String
  startsAt      DateTime
  endsAt        DateTime
  title         String
  status        String?
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  account   CalendarAccount @relation(fields: [accountId], references: [id])
  metadata  CalendarEventMetadata?

  @@unique([userId, googleEventId])
  @@index([userId, startsAt])
  @@index([userId, endsAt])
  @@index([accountId, startsAt])
  @@index([accountId, endsAt])
}

model CalendarEventMetadata {
  id         String   @id @default(cuid())
  eventId    String   @unique
  tags       String[]
  notes      String?
  color      String?
  customJson Json
  deletedAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  event CalendarEvent @relation(fields: [eventId], references: [id])
}

model Task {
  id         String   @id @default(cuid())
  title      String
  assigneeId String?
  dueDate    DateTime?
  status     String   @default("todo")
  completed  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ShoppingItem {
  id        String   @id @default(cuid())
  name      String
  quantity  String?
  category  String?
  purchased Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GoogleAccount {
  id           String   @id @default(cuid())
  userId       String
  googleUserId String
  email        String?
  refreshToken String
  scopes       String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  selectedCalendars SelectedCalendar[]

  @@unique([userId, googleUserId])
  @@index([userId])
}

model SelectedCalendar {
  id              String   @id @default(cuid())
  userId          String
  googleAccountId String
  calendarId      String
  summary         String
  color           String?
  isVisible       Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  googleAccount GoogleAccount @relation(fields: [googleAccountId], references: [id])

  @@unique([userId, calendarId])
  @@index([userId])
}

model EventLink {
  id         String   @id @default(cuid())
  userId     String
  calendarId String
  eventId    String
  extraData  Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, calendarId, eventId])
  @@index([userId, calendarId])
}
